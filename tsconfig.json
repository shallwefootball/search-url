{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules"],
  "lib": ["esnext", "dom"]
}
